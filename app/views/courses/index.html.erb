<% if current_user %>
<% if @user.role == 1 %>
  <h2>I am a Teacher</h2><br>
  <h3>
    <li>Course Management
      <%= button_to('GO!', progress_monitor_by_course_path(), :class => 'btn btn-primary') %>
    </li>
    <li>Authoring Tools <%= button_to('GO!', :class => 'btn btn-primary')%></li>
    <li>Progress Monitor <%= button_to('GO!', :class => 'btn btn-primary')%></li>
  </h3>

<br>
<% else %>
  <h3>
    <ul>
    <% @courses.each do |course| %>
      <li>
        Course Name: <%= course.courseName %>
        <%= link_to 'Information', info_path( :id => course) %>
      </li>
    <% end %>
    </ul>
  </h3>
<% end %>

<% end %>
