            </ul>
          </div>

<!-- Courses List -->
        <% if user_signed_in? -%>
          <blockquote> 
            <h2>Courses List</h2>
          </blockquote>

          <%= yield %>
          
          <%= link_to "Sign out", destroy_user_session_path , :method => :delete %>  |  
          <%= link_to "Change Password" , edit_user_registration_path  %>
