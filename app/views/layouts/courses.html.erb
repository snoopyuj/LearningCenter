<!-- Search -->
        <div class="well sidebar-nav"> 
          <div class = "navbar">
            <form class="well form-search">
             <input type="text" class="input-medium search-query">
             <button type="submit" class="btn">Search</button>
            </form>
          </div><!--/navbar-->
        </div><!--/well sidebar-nav-->
