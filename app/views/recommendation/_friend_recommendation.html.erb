<% if @result.empty? %>
  <h3>
    Sorry we can not find out a user to recommend...QQ<br>
    Please try again<br>
  </h3>
<% else %>
  <table>
    <% @result.each_with_index do |r, index| %>
      <tr>
        <td height="80"><img src='<%=r[ :other_picture]%>'></td>
        <td>
          user's name: <a href="http://www.facebook.com/<%= r[ :other_id] %>"><%= r[ :other_name] %></a></br>
          user's similarity: <%= r[ :similarity]%><br>
          <% if r[ :check_friend] == "1" %>
            <b>We are <Blink><font color="ff0000">FRIEND</font>!!</Blink></b>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
